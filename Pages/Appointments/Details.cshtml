@page
@model AppointmentManagementSystem.Pages.Appointments.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center my-4">Appointment Details</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Appointment Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Appointment.Title)</dd>

                        <dt class="col-sm-3">Start Time</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Appointment.StartTime)</dd>

                        <dt class="col-sm-3">End Time</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Appointment.EndTime)</dd>

                        <dt class="col-sm-3">Location</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Appointment.Location)</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Appointment.Description)</dd>

                        <dt class="col-sm-3">Created By</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Appointment.CreatedBy)</dd>
                    </dl>
                    <div class="text-center">
                        <a asp-page="./Edit" asp-route-id="@Model.Appointment.Id" class="btn btn-primary">Edit</a>
                        <a asp-page="./Index" class="btn btn-secondary ml-2">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
}