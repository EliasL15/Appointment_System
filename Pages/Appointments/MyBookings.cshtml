@page
@model AppointmentManagementSystem.Pages.Appointments.MyBookingsModel
@{
    ViewData["Title"] = "My Bookings";
}

<h1>My Bookings</h1>

<div class="mb-3">
    <a asp-page="./Create" class="btn btn-primary">+ Create New Appointment</a>
</div>

@if (Model.Bookings != null && Model.Bookings.Any())
{
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>Title</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Location</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.Bookings)
            {
                <tr>
                    <td>@booking.Title</td>
                    <td>@booking.StartTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@booking.EndTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@booking.Location</td>
                    <td>@booking.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bookings found.</p>
}

