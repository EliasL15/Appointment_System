@page
@model AppointmentManagementSystem.Pages.Appointments.DeleteModel

@{
    ViewData["Title"] = "Delete Appointment";
}

<h1 class="text-center my-4">Delete Appointment</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Are you sure you want to delete this appointment?</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Appointment.Title)</dd>

                        <dt class="col-sm-3">Start Time</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Appointment.StartTime)</dd>

                        <dt class="col-sm-3">End Time</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Appointment.EndTime)</dd>

                        <dt class="col-sm-3">Location</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Appointment.Location)</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Appointment.Description)</dd>
                    </dl>
                    <form method="post">
                        <input type="hidden" asp-for="Appointment.Id" />
                        <div class="text-center">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-page="./Index" class="btn btn-secondary ml-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
}