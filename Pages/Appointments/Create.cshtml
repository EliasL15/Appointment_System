@page
@model AppointmentManagementSystem.Pages.Appointments.CreateModel

@{
    ViewData["Title"] = "Create Appointment";
}

<h1 class="text-center my-4">Create Appointment</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Appointment Details</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group">
                            <label asp-for="Appointment.Title" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-heading"></i></span>
                                </div>
                                <input asp-for="Appointment.Title" class="form-control" />
                            </div>
                            <span asp-validation-for="Appointment.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Appointment.StartTime" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                </div>
                                <input asp-for="Appointment.StartTime" class="form-control" />
                            </div>
                            <span asp-validation-for="Appointment.StartTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Appointment.EndTime" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                </div>
                                <input asp-for="Appointment.EndTime" class="form-control" />
                            </div>
                            <span asp-validation-for="Appointment.EndTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Appointment.Location" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                </div>
                                <input asp-for="Appointment.Location" class="form-control" />
                            </div>
                            <span asp-validation-for="Appointment.Location" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Appointment.Description" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                                </div>
                                <textarea asp-for="Appointment.Description" class="form-control"></textarea>
                            </div>
                            <span asp-validation-for="Appointment.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-page="Index" class="btn btn-secondary ml-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
}